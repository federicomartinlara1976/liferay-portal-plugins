<?xml version="1.0"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>com.sun.faces.expressionFactory</param-name>
		<param-value>org.jboss.el.ExpressionFactoryImpl</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<!-- Comportamiento est치ndar para el ciclo de petici칩n de los portlets -->
	<context-param>
		<param-name>com.liferay.faces.bridge.bridgeRequestScopePreserved</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>javax.portlet.faces.MAX_MANAGED_REQUEST_SCOPES</param-name>
		<param-value>2000</param-value>
	</context-param>

	<!-- Tama침o del buffer de recursos -->
	<context-param>
		<param-name>com.liferay.faces.bridge.resourceBufferSize</param-name>
		<param-value>4096</param-value>
	</context-param>

	<!-- El bridge resolver치 las distintas instancias de managed bean -->
	<context-param>
		<param-name>com.liferay.faces.bridge.distinctRequestScopedManagedBeans</param-name>
		<param-value>true</param-value>
	</context-param>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
</web-app>
